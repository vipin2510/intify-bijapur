{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "./src",
      "baseUrl": "./",
      "paths": {
        "@shared/*": ["../shared/*"]
      }
    },
    "include": [
      "src/**/*"
    ]
  }
  